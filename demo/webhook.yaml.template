apiVersion: admissionregistration.k8s.io/v1beta1
kind: MutatingWebhookConfiguration
metadata:
  name: {{ .WebhookName }}
  namespace: {{ .Namespace }}
  labels:
    app: {{ .Name }}
webhooks:
  - name: osm-inject.k8s.io
    clientConfig:
      service:
        name: {{ .Name }}
        namespace: {{ .Namespace }}
        path: "/mutate"
      caBundle: {{ .CaBundle }}
    rules:
      - operations: ["CREATE"]
        apiGroups: [""]
        apiVersions: ["v1"]
        resources: ["pods"]
    failurePolicy: Fail
    namespaceSelector:
      matchLabels:
        osm-inject: {{ .Namespace }}
